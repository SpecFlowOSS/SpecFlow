<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <BuildDependsOn>
      CopySpecFlowJsonToOutput;
      $(BuildDependsOn)
    </BuildDependsOn>
    <CleanDependsOn>
      $(CleanDependsOn)
    </CleanDependsOn>
    <RebuildDependsOn>
      CopySpecFlowJsonToOutput;
      $(RebuildDependsOn)
    </RebuildDependsOn>
  </PropertyGroup>

  <Target Name="CopySpecFlowJsonToOutput" >

    <PropertyGroup>
      <SpecFlowJson>specflow.json</SpecFlowJson>
    </PropertyGroup>

    <ItemGroup Condition="Exists($(SpecFlowJson))">
      <None Include="$(SpecFlowJson)" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

  </Target>
</Project>