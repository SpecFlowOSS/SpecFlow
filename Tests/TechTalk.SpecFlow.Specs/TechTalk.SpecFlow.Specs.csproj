<Project Sdk="Microsoft.NET.Sdk">

  <!-- Manually import the MSBuild generation properties to use the version in source. -->
  <Import Project="..\..\SpecFlow.Tools.MsBuild.Generation\build\SpecFlow.Tools.MsBuild.Generation.props" />
  <Import Project="..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\build\SpecFlow.xUnit.props" />

  <PropertyGroup>
    <!-- Set up paths to use local built generation projects (select based on runtime). -->
    <_SpecFlowTasksAssemblyPathBase>$(MSBuildThisFileDirectory)..\..\SpecFlow.Tools.MsBuild.Generation\bin\$(Configuration)\</_SpecFlowTasksAssemblyPathBase>
    <_SpecFlowTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' == 'Core'">$(_SpecFlowTasksAssemblyPathBase)netcoreapp2.0\</_SpecFlowTasksAssemblyPath>
    <_SpecFlowTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' != 'Core'">$(_SpecFlowTasksAssemblyPathBase)net471\</_SpecFlowTasksAssemblyPath>
    <SpecFlowTasksAssembly>$([System.IO.Path]::GetFullPath('$(_SpecFlowTasksAssemblyPath)SpecFlow.Tools.MsBuild.Generation.dll'))</SpecFlowTasksAssembly>

    <_SpecFlowXUnitGeneratorPluginPathBase>$(MSBuildThisFileDirectory)..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\bin\$(Configuration)\</_SpecFlowXUnitGeneratorPluginPathBase>
    <_SpecFlowXUnitGeneratorPluginPath Condition="'$(MSBuildRuntimeType)' == 'Core'">$(_SpecFlowXUnitGeneratorPluginPathBase)netcoreapp2.0\</_SpecFlowXUnitGeneratorPluginPath>
    <_SpecFlowXUnitGeneratorPluginPath Condition="'$(MSBuildRuntimeType)' != 'Core'">$(_SpecFlowXUnitGeneratorPluginPathBase)net471\</_SpecFlowXUnitGeneratorPluginPath>
    <SpecFlowXUnitGeneratorPluginAssembly>$([System.IO.Path]::GetFullPath('$(_SpecFlowXUnitGeneratorPluginPath)TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin.dll'))</SpecFlowXUnitGeneratorPluginAssembly>

    <_SpecFlowXUnitRuntimePluginPathBase>$(MSBuildThisFileDirectory)..\..\Plugins\TechTalk.SpecFlow.xUnit.SpecFlowPlugin\bin\$(Configuration)\</_SpecFlowXUnitRuntimePluginPathBase>
    <_SpecFlowXUnitRuntimePluginPath Condition="'$(MSBuildRuntimeType)' == 'Core'">$(_SpecFlowXUnitRuntimePluginPathBase)netcoreapp2.0\</_SpecFlowXUnitRuntimePluginPath>
    <_SpecFlowXUnitRuntimePluginPath Condition="'$(MSBuildRuntimeType)' != 'Core'">$(_SpecFlowXUnitRuntimePluginPathBase)net45\</_SpecFlowXUnitRuntimePluginPath>
    <SpecFlowXUnitRuntimePluginAssembly>$([System.IO.Path]::GetFullPath('$(_SpecFlowXUnitRuntimePluginPath)TechTalk.SpecFlow.xUnit.SpecFlowPlugin.dll'))</SpecFlowXUnitRuntimePluginAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>$(SpecFlow_Specs_TFM)</TargetFramework>
    <AssemblyName>TechTalk.SpecFlow.Specs</AssemblyName>
    <AssemblyOriginatorKeyFile>$(SpecFlow_KeyFile)</AssemblyOriginatorKeyFile>
    <SignAssembly>$(SpecFlow_EnableStrongNameSigning)</SignAssembly>
    <PublicSign>$(SpecFlow_PublicSign)</PublicSign>
    <PackageId>TechTalk.SpecFlow.Specs</PackageId>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <Configurations>Debug;Release;Debug-XUnit;Debug-MSTest;Debug-NUnit</Configurations>
    <AddSyntheticProjectReferencesForSolutionDependencies>false</AddSyntheticProjectReferencesForSolutionDependencies>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove=".\TestFiles\**\*" />

    <EmbeddedResource Include=".\Drivers\Templates\**\*" />
    <EmbeddedResource Include=".\TestFiles\**\*" />

    <None Include="App.config" />
    <SpecFlowFeature Remove="TestFiles/**/*.feature" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.MSTest.Generator.SpecFlowPlugin\TechTalk.SpecFlow.MSTest.Generator.SpecFlowPlugin.csproj" ReferenceOutputAssembly="False" />
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.MSTest.SpecFlowPlugin\TechTalk.SpecFlow.MSTest.SpecFlowPlugin.csproj" ReferenceOutputAssembly="False" />
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.NUnit.Generator.SpecFlowPlugin\TechTalk.SpecFlow.NUnit.Generator.SpecFlowPlugin.csproj" ReferenceOutputAssembly="False" />
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.NUnit.SpecFlowPlugin\TechTalk.SpecFlow.NUnit.SpecFlowPlugin.csproj" ReferenceOutputAssembly="False" />
    <ProjectReference Include="..\..\SpecFlow.Tools.MsBuild.Generation\SpecFlow.Tools.MsBuild.Generation.csproj" PreBuild="true" />
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.xUnit.SpecFlowPlugin\TechTalk.SpecFlow.xUnit.SpecFlowPlugin.csproj" PreBuild="true" />
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin.csproj" PreBuild="true" />
    <ProjectReference Include="..\..\ExternalRepositories\SpecFlow.TestProjectGenerator\SpecFlow.TestProjectGenerator\TechTalk.SpecFlow.TestProjectGenerator.csproj" />
    <ProjectReference Include="..\..\TechTalk.SpecFlow.Parser\TechTalk.SpecFlow.Parser.csproj" />
    <ProjectReference Include="..\TechTalk.SpecFlow.Specs.Generator.SpecFlowPlugin\TechTalk.SpecFlow.Specs.Generator.SpecFlowPlugin.csproj" />
  </ItemGroup>

  <ItemGroup>
    <CucumberMessagesSpecFlowFeatureFiles Include="..\..\ExternalRepositories\cucumber\cucumber-messages\specs\*.feature" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MSBuild.AdditionalTasks" Version="*" />
    <PackageReference Include="Gherkin" Version="6.0.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.9.0" />
    <PackageReference Include="FluentAssertions" Version="5.4.2" />
    <PackageReference Include="Moq" Version="4.10.0" />
    <PackageReference Include="RhinoMocks" Version="3.6.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.console" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Configuration" />
  </ItemGroup>

  <Target Name="WriteNuGetVersion" AfterTargets="GetBuildVersion" BeforeTargets="BeforeCompile" Condition="'$(NuGetPackageVersion)' != ''">

    <PropertyGroup>
      <NuGetVersionInfoFile>$(IntermediateOutputPath)NuGetVersionInfo.cs</NuGetVersionInfoFile>
    </PropertyGroup>

    <ReplaceTextInFileTask InputFile="NuGetPackageVersion.cs" OutputFile="$(NuGetVersionInfoFile)" TextToReplace="NUGET_VERSION" TextToReplaceWith="$(NuGetPackageVersion)" />

    <ItemGroup>
      <Compile Remove="NuGetPackageVersion.cs" />
      <Compile Include="$(NuGetVersionInfoFile)" />
    </ItemGroup>
  </Target>

  <Target Name="IncludeCucumberMessagesSpecs" BeforeTargets="BeforeUpdateFeatureFilesInProject" Condition="$(DesignTimeBuild) != 'true' OR '$(BuildingProject)' == 'true'">
    <Copy SourceFiles="@(CucumberMessagesSpecFlowFeatureFiles)" DestinationFolder="Features/CucumberMessages" />
    <ItemGroup>
      <SpecFlowFeature Include="Features/CucumberMessages/*.feature" />
    </ItemGroup>
  </Target>

  <Target Name="PreBuild" BeforeTargets="Build">
    <ItemGroup>
      <PreBuildProjectReference Include="@(ProjectReference)" Condition=" '%(ProjectReference.PreBuild)' == 'true' " />
    </ItemGroup>
    <MSBuild Projects="@(PreBuildProjectReference)" ContinueOnError="false" />
  </Target>

  <PropertyGroup>
    <_SpecFlow_PluginTFM Condition=" '$(MSBuildRuntimeType)' == 'Core'">netcoreapp2.0</_SpecFlow_PluginTFM>
    <_SpecFlow_PluginTFM Condition=" '$(MSBuildRuntimeType)' != 'Core'">net471</_SpecFlow_PluginTFM>
  </PropertyGroup>

  <ItemGroup>
    <SpecFlowGeneratorPlugins Include="$(MSBuildThisFileDirectory)..\TechTalk.SpecFlow.Specs.Generator.SpecFlowPlugin\bin\$(Configuration)\$(_SpecFlow_PluginTFM)\TechTalk.SpecFlow.Specs.Generator.SpecFlowPlugin.dll" />
  </ItemGroup>

  <!-- Manually import the MSBuild generation and XUnit build components to use the version in source. -->
  <Import Project="..\..\SpecFlow.Tools.MsBuild.Generation\build\SpecFlow.Tools.MsBuild.Generation.targets" />
  <Import Project="..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\build\SpecFlow.xUnit.targets" />

</Project>
