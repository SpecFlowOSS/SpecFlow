<Project Sdk="Microsoft.NET.Sdk">
  
  <!-- Manually import the MSBuild generation properties to use the version in source. -->
  <Import Project="..\..\SpecFlow.Tools.MsBuild.Generation\build\SpecFlow.Tools.MsBuild.Generation.props" />
  <Import Project="..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\build\SpecFlow.xUnit.props" />
  
  <PropertyGroup>
    <!-- Set up paths to use local built generation projects (select based on runtime). -->
    <_SpecFlowTasksAssemblyPathBase>..\..\SpecFlow.Tools.MsBuild.Generation\bin\$(Configuration)\</_SpecFlowTasksAssemblyPathBase>
    <_SpecFlowTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' == 'Core'">$(_SpecFlowTasksAssemblyPathBase)netcoreapp2.0\</_SpecFlowTasksAssemblyPath>
    <_SpecFlowTasksAssemblyPath Condition="'$(MSBuildRuntimeType)' != 'Core'">$(_SpecFlowTasksAssemblyPathBase)net471\</_SpecFlowTasksAssemblyPath>
    <SpecFlowTasksAssembly>$(_SpecFlowTasksAssemblyPath)SpecFlow.Tools.MsBuild.Generation.dll</SpecFlowTasksAssembly>
    
    <_SpecFlowXUnitGeneratorPluginPathBase>..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\bin\$(Configuration)\</_SpecFlowXUnitGeneratorPluginPathBase>
    <_SpecFlowXUnitGeneratorPluginPath Condition="'$(MSBuildRuntimeType)' == 'Core'">$(_SpecFlowXUnitGeneratorPluginPathBase)netcoreapp2.0\</_SpecFlowXUnitGeneratorPluginPath>
    <_SpecFlowXUnitGeneratorPluginPath Condition="'$(MSBuildRuntimeType)' != 'Core'">$(_SpecFlowXUnitGeneratorPluginPathBase)net471\</_SpecFlowXUnitGeneratorPluginPath>
    <SpecFlowXUnitGeneratorPluginAssembly>$(_SpecFlowXUnitGeneratorPluginPath)TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin.dll</SpecFlowXUnitGeneratorPluginAssembly>
    
    <_SpecFlowXUnitRuntimePluginPathBase>..\..\Plugins\TechTalk.SpecFlow.xUnit.SpecFlowPlugin\bin\$(Configuration)\</_SpecFlowXUnitRuntimePluginPathBase>
    <_SpecFlowXUnitRuntimePluginPath Condition="'$(MSBuildRuntimeType)' == 'Core'">$(_SpecFlowXUnitRuntimePluginPathBase)netcoreapp2.0\</_SpecFlowXUnitRuntimePluginPath>
    <_SpecFlowXUnitRuntimePluginPath Condition="'$(MSBuildRuntimeType)' != 'Core'">$(_SpecFlowXUnitRuntimePluginPathBase)net452\</_SpecFlowXUnitRuntimePluginPath>
    <SpecFlowXUnitRuntimePluginAssembly>$(_SpecFlowXUnitRuntimePluginPath)TechTalk.SpecFlow.xUnit.SpecFlowPlugin.dll</SpecFlowXUnitRuntimePluginAssembly>
    
    <TargetFramework>$(SpecFlow_Core_Specs_TFM)</TargetFramework>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin.csproj" PreBuild="true" />
    <ProjectReference Include="..\..\Plugins\TechTalk.SpecFlow.xUnit.SpecFlowPlugin\TechTalk.SpecFlow.xUnit.SpecFlowPlugin.csproj" PreBuild="true" />
    <ProjectReference Include="..\..\SpecFlow.Tools.MsBuild.Generation\SpecFlow.Tools.MsBuild.Generation.csproj" PreBuild="true" />
    <ProjectReference Include="..\..\TechTalk.SpecFlow\TechTalk.SpecFlow.csproj" />
    <ProjectReference Include="..\..\SpecFlow.Tools.MsBuild.Generation\SpecFlow.Tools.MsBuild.Generation.csproj" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="Build">
    <ItemGroup>
      <PreBuildProjectReference Include="@(ProjectReference)" Condition=" '%(ProjectReference.PreBuild)' == 'true' " />
    </ItemGroup>
    <MSBuild Projects="@(PreBuildProjectReference)" ContinueOnError="false" />
  </Target>

  <ItemGroup>
    <None Update="App.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <!-- Manually import the MSBuild generation and XUnit build components to use the version in source. -->
  <Import Project="..\..\SpecFlow.Tools.MsBuild.Generation\build\SpecFlow.Tools.MsBuild.Generation.targets" />
  <Import Project="..\..\Plugins\TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin\build\SpecFlow.xUnit.targets" />

</Project>
