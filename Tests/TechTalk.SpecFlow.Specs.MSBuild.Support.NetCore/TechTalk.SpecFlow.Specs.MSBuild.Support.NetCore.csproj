<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <RootNamespace>TechTalk.SpecFlow.Specs.MSBuild</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="$(PkgNuGet_Build_Tasks)\runtimes\any\native\NuGet.targets" Link="NuGet.targets">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="$(PkgNuGet_Build_Tasks)\lib\netstandard2.0\NuGet.Build.Tasks.dll" Link="NuGet.Build.Tasks.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Runtime" Version="16.0.461" />
    <PackageReference Include="NuGet.Build.Tasks" Version="5.1.0" GeneratePathProperty="true" />
  </ItemGroup>

</Project>
