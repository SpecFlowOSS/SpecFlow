<Project TreatAsLocalProperty="TaskFolder;TaskAssembly">

  <PropertyGroup>
    
    <_SpecFlow_TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' And '$(_SpecFlow_TaskFolder)' == ''">netcoreapp2.0</_SpecFlow_TaskFolder>
    <_SpecFlow_TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' And '$(_SpecFlow_TaskFolder)' == ''">net471</_SpecFlow_TaskFolder>
    <_SpecFlow_TaskAssembly Condition=" '$(_SpecFlow_TaskAssembly)' == '' ">..\tasks\$(_SpecFlow_TaskFolder)\SpecFlow.Tools.MsBuild.Generation.dll</_SpecFlow_TaskAssembly>
    <SpecFlow_TargetOrder>BeforeUpdateFeatureFilesInProject;UpdateFeatureFilesInProject;GenerateFeatureCodeBehindFiles;SpecFlow_UpdateCompileItemGroup;AfterUpdateFeatureFilesInProject</SpecFlow_TargetOrder>
  </PropertyGroup>

  <Import Project="SpecFlow.Tools.MsBuild.Generation.tasks"/>

</Project>