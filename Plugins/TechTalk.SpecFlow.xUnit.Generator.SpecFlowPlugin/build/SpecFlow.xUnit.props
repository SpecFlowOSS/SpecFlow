<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" TreatAsLocalProperty="TaskFolder;TaskAssembly">

  <PropertyGroup>

    <_SpecFlowXUnitGeneratorPluginPathBase>$(MSBuildThisFileDirectory)/</_SpecFlowXUnitGeneratorPluginPathBase>
    <_SpecFlowXUnitGeneratorPluginPath Condition=" '$(MSBuildRuntimeType)' == 'Core'" >$(_SpecFlowXUnitGeneratorPluginPathBase)netstandard2.0/</_SpecFlowXUnitGeneratorPluginPath>
    <_SpecFlowXUnitGeneratorPluginPath Condition=" '$(MSBuildRuntimeType)' != 'Core'" >$(_SpecFlowXUnitGeneratorPluginPathBase)net471/</_SpecFlowXUnitGeneratorPluginPath>
    <SpecFlowXUnitGeneratorPluginAssembly Condition="'$(SpecFlowXUnitGeneratorPluginAssembly)' == ''">$(_SpecFlowXUnitGeneratorPluginPath)TechTalk.SpecFlow.xUnit.Generator.SpecFlowPlugin.dll</SpecFlowXUnitGeneratorPluginAssembly>

    <_SpecFlowXUnitRuntimePluginPathBase>$(MSBuildThisFileDirectory)../lib/</_SpecFlowXUnitRuntimePluginPathBase>
    <_SpecFlowXUnitRuntimePluginPath Condition=" '$(MSBuildRuntimeType)' == 'Core'" >$(_SpecFlowXUnitRuntimePluginPathBase)netstandard2.0/</_SpecFlowXUnitRuntimePluginPath>
    <_SpecFlowXUnitRuntimePluginPath Condition=" '$(MSBuildRuntimeType)' != 'Core'" >$(_SpecFlowXUnitRuntimePluginPathBase)net452/</_SpecFlowXUnitRuntimePluginPath>
    <SpecFlowXUnitRuntimePluginAssembly Condition="'$(SpecFlowXUnitRuntimePluginAssembly)' == ''">$(_SpecFlowXUnitRuntimePluginPath)TechTalk.SpecFlow.xUnit.SpecFlowPlugin.dll</SpecFlowXUnitRuntimePluginAssembly>

    <GenerateSpecFlowAssemblyHooksFile Condition="'$(GenerateSpecFlowAssemblyHooksFile)' == ''">true</GenerateSpecFlowAssemblyHooksFile>

    <SourceSpecFlowAssemblyHooksFile Condition="'$(SourceSpecFlowAssemblyHooksFile)' == ''">$(MSBuildThisFileDirectory)xUnit.AssemblyHooks$(DefaultLanguageSourceExtension)</SourceSpecFlowAssemblyHooksFile>
    <GeneratedSpecFlowAssemblyHooksFile Condition="'$(GeneratedSpecFlowAssemblyHooksFile)' == ''">$(ProjectDir)$([MSBuild]::Unescape('$(IntermediateOutputPath)'))xUnit.AssemblyHooks$(DefaultLanguageSourceExtension)</GeneratedSpecFlowAssemblyHooksFile>

  </PropertyGroup>

</Project>
